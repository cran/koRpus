						<option label="Leipzig Corpora Collection (*-text.tar.gz) " value="LCC" />
						<option label="Celex (*.CD)" value="celex" />
					</dropdown>
					<browser label="Database file" type="file" id="brw_Databsfl" required="false" />
					<spinbox label="Number of running words" id="spn_Nmbrfrnn" min="1" type="integer" />
					<stretch />
